<!doctype html>
<html lang="{{ app.request.locale|split('_')[0] }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no">
    <title>{% block title %}{% endblock %}
    </title>
    {% block metas %}{% endblock %}

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ absolute_url(asset('components/font-awesome/css/font-awesome.min.css')) }}">
        <link rel="stylesheet" href="{{ absolute_url(asset('components/bootstrap/css/bootstrap.min.css')) }}">
    {% endblock %}

</head>
<body>

<div class="container hidden-print">
    {% for type, messages in app.session.flashBag.all %}
        {% set type = type == 'error' ? 'danger' : type %}

        {% for message in messages %}
            <div class="alert alert-dismissible alert-{{ type }}" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                {{ message |trans }}
            </div>
        {% endfor %}
    {% endfor %}
</div>

{% block body %}
{% endblock %}

{% block javascripts %}
    <script src="{{ absolute_url(asset('components/jquery/jquery.min.js')) }}"></script>
    <script src="{{ absolute_url(asset('components/bootstrap/js/bootstrap.min.js')) }}"></script>
{% endblock %}
</body>
</html>
